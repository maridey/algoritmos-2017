// menu1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#include <string>
#define max 100
using namespace std;
void llenarvec(int V[],int N);
void multiplos(int B[],int M);
void clasificar(int V[],int N);
void prom(int V[],int N);
void consonante(string palabra);
void main()
{string palabra;
 int V[max],B[max],opcion,N,M;
 do
 { cout<<"menu"<<endl;
   cout<<"1.-llenar un vector con los multiplos de 3"<<endl;
   cout<<"2.-clasificar el vector"<<endl;
   cout<<"3.-encontrar el promedio"<<endl;
   cout<<"4.-determinar las consonantes"<<endl;
   cout<<"0.-salir"<<endl;

   cout<<"digite la opcion que desea: "<<endl;
   cin>> opcion;
   switch(opcion)
	  { case 1:
        {do
		 {cout<<"ingrese la cantidad de multiplos: "<<endl;
		 cin>>M;
		 }
		 while(M<0,M>max);
	     multiplos(B,M);
		 break;}
		case 2:
        {do
		{ cout<<"ingrese la cantidad de multiplos: "<<endl;
		cin>>N;}
		 while(N<0,N>max);
	     llenarvec(V,N);
		 clasificar(V,N);
		 break;}
		case 3:
        {do
		 {cout<<"ingrese la cantidad de multiplos: "<<endl;
		 cin>>N;}
		 while(N<0,N>max);
	     llenarvec(V,N);
		 clasificar(V,N);
		 prom(V,N);
		 break;}
		case 4:
        {
		 getline(cin, palabra);
		 consonante (palabra);
		 
		 break;}
   
   default:
	   {cout<<"error";
		   break;}
   }}
  while(opcion!=0);
	  getch();}
  void llenarvec(int V[],int N)
  {int i;
   for(i=0;i<N;i++)
   {cout<<"ingrese V["<<i<<"]: ";
   cin>>V[i];
   }
  }
void multiplos(int B[],int M)
 {int i;
   for(i=0;i<M;i++)
   { B[i]=i*3;
   }
   for(i=0;i<M;i++)
   {cout<<"B["<<i<<"]: "<<B[i]<<endl;
   }}
void clasificar(int V[],int N)
 {int i,aux,j,s;
  aux=0;s=0;
   for(i=0;i<N-1;i++)
   {for(j=i+1;j<N;j++)
   if(V[i]>V[j])
   {aux=V[i];
    V[i]=V[j];
	V[j]=aux;
   }
   }
   for(i=0;i<N;i++)
   {cout<<"V["<<i<<"]: "<<V[i]<<endl;
   }}
void prom(int V[],int N)
{int i;
 float s;
s=0;
for(i=1;i<N-1;i++)
{s=s+V[i];
}
s=s/(N-2);
cout<<"el promedio es: "<<s;
}
void consonante(string palabra)
{int i,cont,longitud;

cout<<"ingrese la frase"<<endl;
getline(cin,palabra);
longitud=palabra.length();
cont=0;
	cout<<"Contar consonantes"<<endl;
	for (int i=0;i<longitud;i++)
	if (palabra[i]!='a' & palabra[i]!='e'&palabra[i]!='i'&palabra[i]!='o'&palabra[i]!='u'&palabra[i]!=' ')
	cont++;
cout<<"el numero de consonantes es: "<<cont<<endl;
	    
}
