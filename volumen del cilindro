#include "stdafx.h"
#include <iostream>
#include "stdlib.h"
#include "conio.h"
#include "math.h"
using namespace std;
float vol(float r,float a);
void main()
	{float r,a,volu;
   cout <<"introducir el altura";
   cin >> a;
   cout << "introducir el radio";
   cin >> r;
   volu= vol( r, a);
   cout <<"el volumen del cilindro es:"<< volu;
   getch();
   }
float vol(float r,float a)
{float pi=3.1416 ;
 float v=pi*r*r*a;
 return v;
}
